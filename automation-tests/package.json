{
  "name": "hemidi-auth-automation-tests",
  "version": "1.0.0",
  "description": "Automation tests for Hemidi Authentication API",
  "main": "index.js",
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:auth": "jest --testPathPattern=auth",
    "test:ratelimit": "jest --testPathPattern=rate-limit",
    "test:e2e": "jest --testPathPattern=e2e",
    "test:smoke": "jest --testPathPattern=smoke",
    "test:parallel": "jest --maxWorkers=4",
    "test:stress": "jest --testPathPattern=stress --testTimeout=300000",
    "stress:light": "node dist/stress-runner.js --level=light",
    "stress:medium": "node dist/stress-runner.js --level=medium", 
    "stress:heavy": "node dist/stress-runner.js --level=heavy",
    "stress:all": "npm run stress:light && npm run stress:medium && npm run stress:heavy",
    "build": "tsc",
    "report": "allure generate reports/allure-results --clean -o reports/allure-report && allure open reports/allure-report"
  },
  "dependencies": {
    "axios": "^1.6.0",
    "dotenv": "^16.3.1",
    "faker": "^6.6.6",
    "lodash": "^4.17.21",
    "moment": "^2.29.4",
    "xlsx": "^0.18.5",
    "cli-progress": "^3.12.0",
    "colors": "^1.4.0"
  },
  "devDependencies": {
    "@types/jest": "^29.5.5",
    "@types/node": "^20.8.0",
    "@types/faker": "^6.6.9",
    "@types/lodash": "^4.14.199",
    "@types/cli-progress": "^3.11.0",
    "allure-jest": "^2.15.0",
    "jest": "^29.7.0",
    "jest-html-reporters": "^3.1.5",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.2.2"
  }
}
